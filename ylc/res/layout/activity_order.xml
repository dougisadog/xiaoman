<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <!-- 显示头部标题 -->

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:text="投资项目："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:text="投资金额："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/companyAddressCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:text="使用红包："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:text="投资时限："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:text="预计年化收益率："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/guaranteeModeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:drawableLeft="@drawable/detail_secu"
                android:drawablePadding="@dimen/text_drawable"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/repaymentMethodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/page_left"
                typefaceName="msyh"
                android:drawableLeft="@drawable/product_item_method"
                android:drawablePadding="@dimen/text_drawable"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_app" />
        </LinearLayout>

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            typefaceName="msyh"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="确认购买"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />
    </LinearLayout>

</LinearLayout>