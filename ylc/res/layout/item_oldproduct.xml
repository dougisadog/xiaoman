<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/page_right"
            typefaceName="msyh"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="20sp" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/status"
            typefaceName="msyh"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_black"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_line"
        android:paddingTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        typefaceName="msyh"
                        android:text="@string/item_product_gain"
                        android:textColor="@color/font_gray"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/gain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:layout_marginTop="@dimen/item_small"
                        typefaceName="msyh"
                        android:paddingLeft="20dp"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gain"
                        android:layout_marginTop="@dimen/item_small"
                        typefaceName="msyh"
                        android:drawableLeft="@drawable/product_item_method"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/font_gray"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        typefaceName="msyh"
                        android:text="@string/item_product_deadline"
                        android:textColor="@color/font_gray"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/deadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t2"
                        android:layout_marginTop="@dimen/item_small"
                        typefaceName="msyh"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gain"
                    android:layout_marginTop="@dimen/item_small"
                    typefaceName="msyh"
                    android:drawableLeft="@drawable/product_item_cond"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/product_cond"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gain"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="@dimen/item_small"
                    typefaceName="msyh"
                    android:drawableLeft="@drawable/product_item_secu"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/product_secu"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.nangua.xiaomanjflc.widget.CircleProgressBar
                android:id="@+id/percentagepb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/percentagetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                typefaceName="msyh"
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                typefaceName="msyh"
                android:textColor="@color/app_bg"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>