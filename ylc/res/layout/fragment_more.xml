<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/app_line" />

    <RelativeLayout
        android:id="@+id/aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_aboutus"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_aboutus"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line" />

    <RelativeLayout
        android:id="@+id/anno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_anno"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_anno"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:id="@+id/go1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/go1"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/more_point"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line" />

    <RelativeLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_heip"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_help"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line" />

    <RelativeLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right"
        android:visibility="gone" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_share"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_share"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_update"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_update"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:id="@+id/go2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />

        <ImageView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/go2"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/more_point"
            android:visibility="gone" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/p1"
            typefaceName="msyh"
            android:gravity="center"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_hint" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line" />

    <RelativeLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            typefaceName="msyh"
            android:background="@null"
            android:drawableLeft="@drawable/more_tel"
            android:drawablePadding="@dimen/text_drawable"
            android:gravity="center_vertical"
            android:text="@string/more_comment"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:src="@drawable/account_goto" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_drawable"
            android:layout_toLeftOf="@id/image"
            typefaceName="msyh"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="工作日9:00-18:00"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_line"
        android:background="@color/app_line" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/page_left"
            android:layout_marginRight="@dimen/page_right"
            android:layout_marginTop="@dimen/page_line"
            typefaceName="msyh"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/signout"
            android:textColor="@color/white"
            android:textSize="@dimen/font_app" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_line"
            typefaceName="msyh"
            android:gravity="center"
            android:text="@string/copyright"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_hint" />
    </RelativeLayout>

</LinearLayout>