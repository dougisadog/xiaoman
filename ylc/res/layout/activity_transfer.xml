<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <!-- 显示头部标题 -->

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_test"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_account_security"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_products_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        typefaceName="msyh"
                        android:textColor="#353535"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_switch_notification"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="剩余期限"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_lave_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:id="@+id/rl_switch_sound"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="预期年化收益率"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_finance_interest_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="转让本金"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_principal"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_yuan01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="元"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_transfer_capital"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@id/tv_yuan01"
                        android:layout_toRightOf="@id/tv_principal"
                        android:gravity="center"
                        android:hint="请输入金额"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:textColor="#353535" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_interest_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="预期所得利息"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_interest_title"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="0元"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_zrlx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="折让利息金额"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_zrlx"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_yuan02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="元"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_discount_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@id/tv_yuan02"
                        android:layout_toRightOf="@id/tv_zrlx"
                        android:gravity="center"
                        android:hint="请输入金额"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:textColor="#353535" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="转让手续费"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_counter"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_counter_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="0元"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="转让价格"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_price"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_transfer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="0元"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="挂牌收益率"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_yield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="筹款期限"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_problem6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_term"
                        android:src="@drawable/problem" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="24小时"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#ffffff"
                    android:padding="10dip" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:paddingLeft="10dip"
                        android:text="预计下架时间"
                        android:textColor="#353535"
                        android:textSize="16sp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_off_shelf_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="我已仔细阅读并签署"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/tv_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="《债权转让协议》"
                            android:textColor="@color/blue"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tv_transfer_publish"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:background="@color/app_blue"
                        android:gravity="center"
                        android:text="立即发布"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <AbsoluteLayout
            android:id="@+id/al_prompt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/tv_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                typefaceName="msyh"
                android:background="@drawable/bubble"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="gone" />
        </AbsoluteLayout>
    </FrameLayout>

</LinearLayout>