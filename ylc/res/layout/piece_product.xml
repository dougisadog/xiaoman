<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 产品详情 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_bottom"
        android:paddingLeft="@dimen/page_left"
        android:paddingTop="@dimen/page_small" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/page_right"
                typefaceName="msyh"
                android:gravity="center_vertical"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_title" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/status"
                typefaceName="msyh"
                android:drawableLeft="@drawable/product_item_name"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_title" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/text_line"
            android:layout_marginTop="@dimen/page_small"
            android:background="@color/app_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestmentTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="投资总额"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/totalInvestmentTittle"
                            typefaceName="msyh"
                            android:gravity="bottom"
                            android:text="1000"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestmentunit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/totalInvestment"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="元"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="投资时限"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentPeriodDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/investmentTittle"
                            typefaceName="msyh"
                            android:text="1"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentPeriodDescunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/investmentTittle"
                            android:layout_toRightOf="@+id/investmentPeriodDesc"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="个月"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/annualizedGainTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="预计年化收益率"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/annualizedGain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/annualizedGainTittle"
                            typefaceName="msyh"
                            android:text="10.00"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/percentIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/annualizedGainTittle"
                            android:layout_toRightOf="@+id/annualizedGain"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="%"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />

                        <LinearLayout
                            android:id="@+id/add_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/annualizedGainTittle"
                            android:layout_toRightOf="@+id/percentIcon"
                            android:visibility="gone" >

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="+"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_num" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:id="@+id/add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="15"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_app" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="%"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_small" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="可投"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/font_hint" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:id="@+id/remainingInvestmentAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_drawable"
                                typefaceName="msyh"
                                android:text="300元"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_hint" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="起投"
                                android:textColor="@color/font_gray"
                                android:textSize="@dimen/font_hint" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:id="@+id/singlePurchaseLowerLimit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_drawable"
                                typefaceName="msyh"
                                android:text="300元"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_hint" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line"
                        android:orientation="horizontal" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/guaranteeModeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            typefaceName="msyh"
                            android:drawableLeft="@drawable/detail_secu"
                            android:drawablePadding="@dimen/text_drawable"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/repaymentMethodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/page_left"
                            typefaceName="msyh"
                            android:drawableLeft="@drawable/product_item_method"
                            android:drawablePadding="@dimen/text_drawable"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line"
                        android:orientation="horizontal" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/expirationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            typefaceName="msyh"
                            android:drawableLeft="@drawable/detail_clock"
                            android:drawablePadding="@dimen/text_drawable"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/interestBeginDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/page_left"
                            typefaceName="msyh"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp" >

                    <com.nangua.xiaomanjflc.widget.CircleProgressBar
                        android:id="@+id/percentagepb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="30dp" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/percentagetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        typefaceName="msyh"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_app" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        typefaceName="msyh"
                        android:textColor="@color/app_bg"
                        android:textSize="@dimen/font_app" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 项目简介 -->

    <LinearLayout
        android:id="@+id/ll_project_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_bottom"
        android:paddingLeft="@dimen/page_left"
        android:paddingTop="@dimen/page_small"
        android:visibility="gone" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            typefaceName="msyh"
            android:drawableLeft="@drawable/detail_desc"
            android:drawablePadding="@dimen/text_drawable"
            android:text="项目简介"
            android:textColor="@color/black"
            android:textSize="@dimen/font_app" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/text_line"
            android:layout_marginTop="@dimen/page_small"
            android:background="@color/app_line" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            typefaceName="msyh"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_app" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_bottom"
        android:paddingLeft="@dimen/page_left"
        android:paddingTop="@dimen/page_small"
        android:visibility="gone" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/tv_person_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            typefaceName="msyh"
            android:drawableLeft="@drawable/detail_person"
            android:drawablePadding="@dimen/text_drawable"
            android:textColor="@color/black"
            android:textSize="@dimen/font_app" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/text_line"
            android:layout_marginTop="@dimen/page_small"
            android:background="@color/app_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="姓名："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="性别："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="年龄："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="资金用途："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_bottom"
        android:paddingLeft="@dimen/page_left"
        android:paddingTop="@dimen/page_small"
        android:visibility="gone" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/tv_business_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            typefaceName="msyh"
            android:drawableLeft="@drawable/detail_person"
            android:drawablePadding="@dimen/text_drawable"
            android:textColor="@color/black"
            android:textSize="@dimen/font_app" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/text_line"
            android:layout_marginTop="@dimen/page_small"
            android:background="@color/app_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="企业名称："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="法人代表："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_legalPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="注册资本："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_registered_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:text="所属行业："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_hint" />

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/tv_industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/page_small"
                    typefaceName="msyh"
                    android:textColor="@color/font_gray"
