<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_blue" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            typefaceName="msyh"
            android:drawableLeft="@drawable/header_back"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我的账户"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/ic_list_white_48dp" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            typefaceName="msyh"
            android:gravity="center"
            android:text="我的消息"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.louding.frame.widget.KJListView
            android:id="@+id/lv_message_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#efeef4"
            android:dividerHeight="5dp" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            typefaceName="msyh"
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:drawablePadding="30dp"
            android:drawableTop="@drawable/empty"
            android:gravity="center"
            android:text="暂无数据！"
            android:textSize="20sp" />
    </FrameLayout>

</LinearLayout>