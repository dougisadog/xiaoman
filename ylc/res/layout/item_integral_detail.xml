<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/text_line"
    android:paddingLeft="@dimen/page_left"
    android:paddingRight="@dimen/page_right"
    android:paddingTop="@dimen/text_line" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            typefaceName="msyh"
            android:text="2016-04-22 12:23:22"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/tv_integral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            typefaceName="msyh"
            android:text="+50"
            android:textColor="#485b7c"
            android:textSize="@dimen/font_app" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            typefaceName="msyh"
            android:gravity="center_vertical|right"
            android:text="投资奖励积分"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_app" />
    </LinearLayout>

</LinearLayout>