<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 显示头部标题 -->

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/page_bottom"
                android:paddingLeft="@dimen/page_left"
                android:paddingTop="@dimen/page_small" >

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line"
                    typefaceName="msyh"
                    android:drawableLeft="@drawable/product_item_name"
                    android:drawablePadding="@dimen/text_drawable"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_app" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/text_line"
                    android:layout_marginTop="@dimen/page_small"
                    android:background="@color/app_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical" >

                        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestmentTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="投资总额"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/totalInvestmentTittle"
                            typefaceName="msyh"
                            android:gravity="bottom"
                            android:text="1000"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/totalInvestmentunit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/totalInvestment"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="元"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="投资时限"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentPeriodDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/investmentTittle"
                            typefaceName="msyh"
                            android:text="1"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/investmentPeriodDescunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/investmentTittle"
                            android:layout_toRightOf="@+id/investmentPeriodDesc"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="个月"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" >

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/annualizedGainTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            typefaceName="msyh"
                            android:gravity="center"
                            android:text="预计年化收益率"
                            android:textColor="@color/font_gray"
                            android:textSize="@dimen/font_hint" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/annualizedGain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/annualizedGainTittle"
                            typefaceName="msyh"
                            android:text="10.00"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_num" />

                        <com.nangua.xiaomanjflc.widget.FontTextView
                            android:id="@+id/percentIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/annualizedGainTittle"
                            android:layout_toRightOf="@+id/annualizedGain"
                            typefaceName="msyh"
                            android:paddingBottom="2dp"
                            android:text="%"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/font_small" />
                        
                         <LinearLayout
                            android:id="@+id/add_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/annualizedGainTittle"
                            android:layout_toRightOf="@+id/percentIcon"
                            android:visibility="gone" >

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="+"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_num" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:id="@+id/add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="15"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_app" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                typefaceName="msyh"
                                android:text="%"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_small" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_line"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <com.nangua.xiaomanjflc.widget.FontTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        typefaceName="msyh"
                                        android:text="可投"
                                        android:textColor="@color/font_gray"
                                        android:textSize="@dimen/font_hint" />

                                    <com.nangua.xiaomanjflc.widget.FontTextView
                                        android:id="@+id/remainingInvestmentAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/text_drawable"
                                        typefaceName="msyh"
                                        android:textColor="@color/app_orange"
                                        android:textSize="@dimen/font_hint" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <com.nangua.xiaomanjflc.widget.FontTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        typefaceName="msyh"
                                        android:text="起投"
                                        android:textColor="@color/font_gray"
                                        android:textSize="@dimen/font_hint" />

                                    <com.nangua.xiaomanjflc.widget.FontTextView
                                        android:id="@+id/singlePurchaseLowerLimit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/text_drawable"
                                        typefaceName="msyh"
                                        android:textColor="@color/app_orange"
                                        android:textSize="@dimen/font_hint" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_line"
                                android:orientation="horizontal" >

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/guaranteeModeName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    typefaceName="msyh"
                                    android:drawableLeft="@drawable/detail_secu"
                                    android:drawablePadding="@dimen/text_drawable"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/font_hint" />

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/repaymentMethodName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/page_left"
                                    typefaceName="msyh"
                                    android:drawableLeft="@drawable/product_item_method"
                                    android:drawablePadding="@dimen/text_drawable"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/font_hint" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_line"
                                android:orientation="horizontal" >

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/expirationDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/text_line"
                                    typefaceName="msyh"
                                    android:drawableLeft="@drawable/detail_clock"
                                    android:drawablePadding="@dimen/text_drawable"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/font_hint" />

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/interestBeginDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/text_line"
                                    typefaceName="msyh"
                                    android:drawablePadding="@dimen/text_drawable"
                                    android:paddingLeft="18dp"
                                    android:textColor="@color/font_gray"
                                    android:textSize="@dimen/font_hint" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp" >
                            <com.nangua.xiaomanjflc.widget.CircleProgressBar
                                android:id="@+id/percentagepb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="30dp" />

                            <com.nangua.xiaomanjflc.widget.FontTextView
                                android:id="@+id/percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                typefaceName="msyh"
                                android:textColor="@color/app_bg"
                                android:textSize="@dimen/font_app" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" >

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/percentagetxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    typefaceName="msyh"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/font_app" />

                                <com.nangua.xiaomanjflc.widget.FontTextView
                                    android:id="@+id/p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    typefaceName="msyh"
                                    android:text="%"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/font_small" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/text_line"
                android:paddingLeft="@dimen/page_left"
                android:paddingRight="@dimen/page_right"
                android:paddingTop="@dimen/text_line" >

                <RelativeLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/page_small" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:text="可用金额："
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_app" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/tender_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        typefaceName="msyh"
                        android:background="@drawable/cash_cash"
                        android:gravity="center"
                        android:text="充值"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_app" 
                        android:visibility="gone"/>

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tender_cash"
                        android:layout_toRightOf="@id/first"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/font_app" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@drawable/edit_gray"
                    android:hint="输入金额为100元的整数倍"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:maxLength="9"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint"
                    android:textSize="@dimen/font_app" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/text_line"
                android:paddingLeft="@dimen/page_left"
                android:paddingRight="@dimen/page_right"
                android:paddingTop="@dimen/text_line" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/cash_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        typefaceName="msyh"
                        android:gravity="center"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_app" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/cash_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        typefaceName="msyh"
                        android:drawablePadding="@dimen/text_drawable"
                        android:drawableRight="@drawable/cash_right"
                        android:gravity="center"
                        android:text="使用"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/font_app" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        typefaceName="msyh"
                        android:gravity="center"
                        android:text="现金券抵扣"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_app" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/cash_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        typefaceName="msyh"
                        android:gravity="center"
                        android:text="0元"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/font_app" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line" >

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        typefaceName="msyh"
                        android:gravity="center"
                        android:text="付款金额"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/font_app" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        typefaceName="msyh"
                        android:gravity="center"
                        android:text="0元"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/font_app" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/text_line"
                    android:background="@color/app_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line" >

                    <ImageView
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/checkbox" />

                    <com.nangua.xiaomanjflc.widget.FontTextView
                        android:id="@+id/protocol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/text_drawable"
                        typefaceName="msyh"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/font_hint"
                        android:visibility="visible" />
                </LinearLayout>

                <com.nangua.xiaomanjflc.widget.FontTextView
                    android:id="@+id/buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_line"
                    typefaceName="msyh"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>