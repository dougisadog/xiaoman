<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/page_small"
        android:visibility="gone" >

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            typefaceName="msyh"
            android:background="@drawable/tab_left"
            android:gravity="center"
            android:text="直投宝"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            typefaceName="msyh"
            android:background="@drawable/invest_four"
            android:gravity="center"
            android:text="定投宝"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/font_title" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.louding.frame.widget.KJListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            typefaceName="msyh"
            android:drawablePadding="30dp"
            android:drawableTop="@drawable/empty"
            android:gravity="center"
            android:text="暂无数据！"
            android:textSize="20sp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>