<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 显示头部标题 -->

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headLinear"
        android:orientation="vertical"
        android:paddingLeft="@dimen/page_left"
        android:paddingRight="@dimen/page_right"
        android:paddingTop="@dimen/page_top" >

 <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_line"
            android:background="@null"
            android:drawableLeft="@drawable/sign_tel"
            android:drawablePadding="@dimen/page_drawable"
            android:gravity="center_vertical"
            android:hint=" 输入绑定手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/font_gray_man"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_app" />
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/sign_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/page_drawable"
                android:background="@color/app_line_man" />
        </LinearLayout>
        

<LinearLayout
    android:id="@+id/verify1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

           <EditText
                android:id="@+id/verification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:drawableLeft="@drawable/sign_verify"
                android:drawablePadding="@dimen/page_drawable"
                android:gravity="center_vertical"
                android:hint="@string/sign_verify_hint"
                android:textColor="@color/font_gray"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/font_app" />

            <ImageView
                android:id="@+id/verifyimage"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="fitXY" />
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/sign_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/page_drawable"
                android:background="@color/app_line_man" />
        </LinearLayout>
        

<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/tel_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:background="@null"
                android:drawableLeft="@drawable/sign_tel_verify"
                android:drawablePadding="@dimen/page_drawable"
                android:gravity="center_vertical"
                android:hint="@string/sign_tel_verify_hint"
                android:singleLine="true"
                android:textColor="@color/font_gray_man"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/font_app" />

            <com.nangua.xiaomanjflc.widget.FontTextView
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                typefaceName="msyh"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:text="@string/sign_code"
                android:textColor="@color/white"
                android:textSize="@dimen/font_app" />
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/sign_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/page_drawable"
                android:background="@color/app_line_man" />
        </LinearLayout>
<EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_line"
            android:background="@null"
            android:drawableLeft="@drawable/sign_pwd"
            android:drawablePadding="@dimen/page_drawable"
            android:gravity="center_vertical"
            android:hint="@string/new_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/font_gray_man"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_app" />
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/sign_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/page_drawable"
                android:background="@color/app_line_man" />
        </LinearLayout>
<EditText
            android:id="@+id/pwdconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_line"
            android:background="@null"
            android:drawableLeft="@drawable/sign_pwd"
            android:drawablePadding="@dimen/page_drawable"
            android:gravity="center_vertical"
            android:hint="@string/new_confirm_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/font_gray_man"
            android:textColorHint="@color/font_hint"
            android:textSize="@dimen/font_app" />
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_line"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/sign_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/page_drawable"
                android:background="@color/app_line_man" />
        </LinearLayout>

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_line"
            typefaceName="msyh"
            android:drawableLeft="@drawable/sign_padding"
            android:drawablePadding="@dimen/page_drawable"
            android:gravity="center_vertical"
            android:text="@string/sign_hint"
            android:textColor="@color/red"
            android:textSize="@dimen/font_hint"
            android:visibility="gone" />

        <com.nangua.xiaomanjflc.widget.FontTextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/page_line"
            typefaceName="msyh"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_app" />
    </LinearLayout>

</RelativeLayout>